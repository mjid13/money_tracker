# Flask Configuration
SECRET_KEY=your_super_secret_key_here
FLASK_ENV=development
FLASK_DEBUG=True

# Database Configuration
DATABASE_URL=sqlite:///transactions.db

# Google OAuth Configuration (Required for Gmail integration)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:5000/oauth/google/callback

# Email Settings (Optional - for traditional email parsing)
EMAIL_HOST=imap.gmail.com
EMAIL_PORT=993
EMAIL_USERNAME=
EMAIL_PASSWORD=
EMAIL_USE_SSL=True

# Bank Email Filters (Optional)
BANK_EMAIL_ADDRESSES=bankmuscat@bankmuscat.com,alerts@bank.com
BANK_EMAIL_SUBJECTS=transaction,alert,notification,statement

# Application Settings
LOG_LEVEL=INFO
FETCH_INTERVAL=3600
UPLOAD_FOLDER=uploads
POSTS_PER_PAGE=25

# Security Settings
PERMANENT_SESSION_LIFETIME=3600